{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "crons": [
    {
      "path": "/api/blog/generate",
      "schedule": "0 */2 * * *"
    },
    {
      "path": "/api/cron/morning-briefing",
