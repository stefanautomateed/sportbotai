model ChatQuery {
  id                 String    @id @default(cuid())
  query              String
  queryNormalized    String?
  category           String?
  brainMode          String?
  sport              String?
  team               String?
  league             String?
  usedRealTimeSearch Boolean   @default(false)
  responseLength     Int?
  hadCitations       Boolean   @default(false)
  queryHash          String?
  similarCount       Int       @default(1)
  createdAt          DateTime  @default(now())
  answer             String?
  citations          Json?
  expiresAt          DateTime?
  
  // User who submitted the query (optional - anonymous queries have no user)
  userId             String?
  user               User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  // Data confidence metrics (for quality tracking)
  dataConfidenceLevel String?   // FULL, PARTIAL, MINIMAL, NONE
  dataConfidenceScore Int?      // 0-100
  dataSources         Json?     // Array of sources used

  // ============================================
  // QUERY INTELLIGENCE TRACKING (for learning)
  // ============================================
  
  // Classification details
  detectedIntent     String?   // MATCH_PREDICTION, PLAYER_STATS, etc.
  intentConfidence   Float?    // 0.0 - 1.0 (how sure we were)
  entitiesDetected   Json?     // ["LeBron James", "Lakers"]
  expandedQuery      String?   // The query after entity expansion
  
  // Response quality metrics  
  feedbackRating     Int?      // 1 (thumbs down) or 5 (thumbs up)
  feedbackAt         DateTime?
  feedbackComment    String?   // Optional user comment
  
  // Mismatch detection (automatic)
  entityMismatch     Boolean   @default(false)  // Asked about X, answered about Y
  mismatchDetails    String?   // "Query mentioned Jokic but response was about Knicks"
  
  // Pattern learning
  patternMatched     String?   // Which pattern matched this query
  wasLLMClassified   Boolean   @default(false)  // True if patterns failed, used LLM
  
  // Response source tracking
  responseSource     String?   // CACHE, VERIFIED_STATS, PERPLEXITY, OUR_PREDICTION, LLM
  cacheHit           Boolean   @default(false)
  latencyMs          Int?      // How long the response took
  
  // A/B Testing
  abTestVariant      String?   // Which A/B test variant was used (A or B)
  abTestId           String?   // Which A/B test this query was part of

  @@index([category])
  @@index([sport])
  @@index([team])
  @@index([queryHash])
  @@index([createdAt])
  @@index([expiresAt])
  @@index([userId])
  @@index([dataConfidenceLevel])
  @@index([detectedIntent])
  @@index([feedbackRating])
  @@index([entityMismatch])
  @@index([wasLLMClassified])
}

